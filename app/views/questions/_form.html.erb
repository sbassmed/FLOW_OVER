<div class="container">
  <div class="row">
    <div class="col-sm-6 mx-auto">
      <h2><%= form_title %></h2>
      <%= form_for @question do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Título" %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, rows: 7, class: "form-control input-lg", placeholder: "Descripción" %>
        </div>

        <div>
          <%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
        </div>
        <div>
          <%=link_to 'Inicio',root_path ,class: "btn btn-link btn-lg btn-block"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
